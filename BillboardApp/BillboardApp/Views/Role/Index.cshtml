@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
@{
    ViewBag.Title = "Roles";
}

<h2>Roles Listing</h2>
@Html.ActionLink("Create New Role", "Create", "Role") | @Html.ActionLink("Manage User Role", "ManageUserRoles")
<hr />

<div>
    @foreach (var role in Model)
    {
        <p>
            <strong>@role.Name | </strong>
            @Html.ActionLink("Delete", "Delete", new { roleName = @role.Name })

            @*<span onclick="return confirm('Are you sure to delete?')">
                    <a href="/Roles/Delete?RoleName=@role.Name" class="delLink" style="color:red;">Delete</a>
                </span> |*@

            @Html.ActionLink("Edit", "Edit", new { roleName = @role.Name })

        </p>
    }
</div>